<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
 <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like': 'Likes'%>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
